version: '3.1'
intents:
- affirm
- bot_challenge
- deny
- goodbye
- greet
- mood_great
- mood_unhappy
responses:
  utter_greet:
  - text: Привет! Как у тебя дела?
  utter_cheer_up:
  - text: 'Вот что поднимет вам настроение:'
    image: https://i.imgur.com/nGF1K8f.jpg
  utter_did_that_help:
  - text: Это помогло вам?
  utter_happy:
  - text: Отлично, продолжай!
  utter_goodbye:
  - text: До свидания.
  utter_iamabot:
  - text: Я бот, сделан с помощью Rasa.
session_config:
  session_expiration_time: 60
  carry_over_slots_to_new_session: true
actions:
- utter_goodbye
- utter_greet
